<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.tng</groupId>
    <artifactId>ewallet</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>investment-component</artifactId>
  <packaging>bundle</packaging>
  <name>investment-component</name>

  <dependencies>
    <dependency>
      <groupId>com.tng</groupId>
      <artifactId>ewallet-api</artifactId>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>4.11.0</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.tng</groupId>
      <artifactId>payment-component</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.tng</groupId>
      <artifactId>wallet-component</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.tng</groupId>
      <artifactId>user-component</artifactId> 
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.cmpn</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.service.component.annotations</artifactId>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Name>Investment Component</Bundle-Name>
            <Bundle-Description>Investment Service Implementation</Bundle-Description>

            <Export-Package></Export-Package>

            <Import-Package>
              com.tng,
              org.osgi.framework,
              *
            </Import-Package>

            <Private-Package>com.tng.investment.impl</Private-Package>

            <_dsannotations>*</_dsannotations>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>